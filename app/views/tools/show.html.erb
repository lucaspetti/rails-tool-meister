
<div class= "col-sm-12">
  <div class="col-sm-6">
    <div class="row margin-right">
      <div class= "banner-show" style="background-image: url('<%= cl_image_path @tool.image %>')">
      </div>
    </div>

    <div class="row margin-right" style="background-color: white">
      <div class="section title">
        <h3><%= @tool.name %></h3>
      </div>
      <div class="section title price-show">
        <h3><%=@tool.price_per_day%> EUR per day</h3>
      </div>
    </div>

    <div class="row margin-right" style="background-color: white">
      <div class="padding">
        <h3>Details</h3>
        <p><%= @tool.name %></p>
        <p><%= @tool.category %><p>
          <p><%=@tool.description%></p>
          <p><%= @tool.location%></p>
        </div>
      </div>

      <div class="row margin-right" style="background-color: white">
        <div class="padding">
         <img class="card-avatar" src="https://is1-ssl.mzstatic.com/image/thumb/Purple125/v4/db/9d/a6/db9da66d-14ad-20a4-916b-8934d5531199/AppIcon-1x_U007emarketing-85-220-5.png/246x0w.jpg">
         <h3> Handyman </h3>
         <p> Mario </p>
         <p> Brother </p>
         <p> Reviews </p>
       </div>
     </div>
   </div>

   <div class="col-sm-6">

      <div class="row margin-top" style="background-color: white">
        <div id="jump" class="padding margin-right">
          <%= render 'components/bookingform' %>
        </div>
      </div>


    <div class="row margin-top" style="background-color: white">
        <div class="padding">
          <h3>Where to find the tool</h3>
        </div>
          <div class= "flex-map-show margin-top">
            <div class="map-show"
            id="map"
            data-markers="[<%= @markers.to_json %>]"
            data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
            ></div>
        </div>
    </div>
  </div>
</div>

