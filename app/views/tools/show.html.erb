    <div class="column"></div>
       <div>
        <h1><%= @tool.name %></h1>
        <h2><%= @tool.category %></h2>
      </div>

    <div class="column"></div>
        <div>
           <p><%=@tool.description%></p>
        </div>
        <div>
          <h3><%= @tool.location%></h2>
        </div>
      </div>
    </div>
  </div>
</div>
