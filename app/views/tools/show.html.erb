
<div>
  <%= link_to 'back to all tools', tools_path %>
</div>
<div class="container">
  <div class="col-xs-12 col-sm-4">
    <div class="column"></div>
       <divcolumn        <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
      </div>
    <div class="column"></div>
       <div>
        <%= cl_image_tag @tool.photo.identifier, height: 300, width: 400, crop: :fil%>
