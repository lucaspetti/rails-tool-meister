  <div class="container profile-header-container text-center">
    <div class="profile-header-infos">
      <!-- <img src="css/images/ole.jpg" alt="avatar"> -->
      <h1>Your <%= "Tool".pluralize(@tools.size) %></h1>
      <!-- <h2>co-founder @YourStartup</h2> -->
    </div>
  </div>
