<div class="container">
  <div class="row">
    <% @tools.each do |b| %>
    <div class="col-xs-12 col-sm-6">
      <div class="product">
    <!-- <div class="product-upvote">
      <div class="product-arrow"></div>
      <div class="product-count">95</div>
    </div> -->
    <div class="product-image" style="background-image: url('<%= cl_image_path b.image %>');">
    </div>
    <div class="product-body">
      <h3><%= b.name %></h3>
      <p class="price"><%= b.price_per_day %> EUR per day</p>
    </div>
    <div class="product-body-right">
      <p>⚙️</p>
      <p>🗑</p>
    </div>
  </div>
  </div>
  <% end %>
</div>
</div>
