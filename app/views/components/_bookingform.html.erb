<div>
  <h3>Want to book this tool?</h3>
  <%= simple_form_for([@tool, @booking]) do |f| %>
  <%= f.input :start_date, :as => :date, :input_html => { :class => 'date_picker' } %>
  <%= f.input :end_date, :as => :date, :input_html => { :class => 'date_picker' } %>
  <%= f.button :submit , class: 'btn-primary' %>
  <% end %>
</div>
