<div class="form-container">
<%= form_tag tools_path, method: :get do %>
  <%#= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a movie"
  %>
  <%#= select_tag "location", options_from_collection_for_select(@locations, "id", "name")  %>
  <div class="form-group">
  <%= select_tag "location", options_for_select(@locations, "location"),
    class: "form-control",
     prompt: "Select a city" %>
  </div>
  <div class="form-group">
  <%= select_tag "category", options_for_select(@tools, "category"),
    class: "form-control",
    prompt: "Select a category" %>
  </div>
  <%= button_tag "Submit", class: "button" %>

<% end %>
</div>

